<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <!--  <item name="android:background">@color/ypBlack</item> -->
        <item name="android:textColor">@color/ypWhite</item>
        <item name="svgColor">@color/ypWhite</item>
        <item name="searchIconColor">@color/ypBlack</item>
        <item name="tabIconTint">@color/ypWhite</item>
        <item name="tabIndicatorColor">@color/ypWhite</item>
        <item name="tabSelectedTextColor">@color/ypWhite</item>
        <item name="tabTextColor">@color/ypWhite</item>
    </style>
    <style name="MainBackground">
        <item name="android:background">@color/ypBlack</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
    </style>
    <style name="ButtonOnSearchView">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/size8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/ypWhite</item>
        <item name="android:textColor">@color/ypBlack</item>
    </style>
    <style name="SearchBoxStyle">
        <item name="android:textColor">@color/ypBlack</item>
        <item name="android:textColorHint">@color/ypBlack</item>
    </style>
    <style name="InformationPropertyStyle">
        <item name="android:textColor">@color/shevronGray</item>
    </style>
    <style name="ValuePropertyStyle">
        <item name="android:textColor">@color/ypWhite</item>
    </style>
</resources>