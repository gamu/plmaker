<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="bottomSheetBgColor">@color/ypBlack</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <!--  <item name="android:background">@color/ypBlack</item> -->
        <item name="android:textColor">@color/ypWhite</item>
        <item name="svgColor">@color/ypWhite</item>
        <item name="svgFavoriteColor">#c6c6c8</item>
        <item name="searchIconColor">@color/ypBlack</item>
        <item name="tabIconTint">@color/ypWhite</item>
        <item name="tabIndicatorColor">@color/ypWhite</item>
        <item name="tabSelectedTextColor">@color/ypWhite</item>
        <item name="tabTextColor">@color/ypWhite</item>
        <item name="android:background">@color/ypBlack</item>
    </style>
    <style name="MainBackground">
        <item name="android:background">@color/ypBlack</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
    </style>
    <style name="ButtonOnSearchView">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/size8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/ypWhite</item>
        <item name="android:textColor">@color/ypBlack</item>
    </style>
    <style name="SearchBoxStyle">
        <item name="android:thumbTint">@color/ypBlue</item>
        <item name="android:trackTint">@color/ypBlueGray</item>
    </style>
    <style name="CheckBoxStyle">
        <item name="android:textColor">@color/ypBlack</item>
        <item name="android:textColorHint">@color/ypBlack</item>
    </style>
    <style name="InformationPropertyStyle">
        <item name="android:textColor">@color/shevronGray</item>
    </style>
    <style name="ValuePropertyStyle">
        <item name="android:textColor">@color/ypWhite</item>
    </style>
    <style name="NewPlaylistLabel">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size19</item>
        <item name="android:textColor">@color/ypWhite</item>
    </style>
    <style name="BottomSheetStyle">
        <item name="android:backgroundTint">@color/ypBlack</item>
    </style>
    <style name="BottomSheetInvertStyle">
        <item name="android:backgroundTint">@color/ypWhite</item>
    </style>
    <style name="TrackArtistStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/ypRegular12</item>
        <item name="android:textColor">@color/ypWhite</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="PlaylistStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ypRegular16</item>
        <item name="android:textColor">@color/ypWhite</item>
    </style>
    <style name="PlaylistTrackNameStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ypRegular16</item>
        <item name="android:textColor">@color/ypWhite</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="PlayEmptyStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ypMedium20</item>
        <item name="android:textColor">@color/ypWhite</item>
    </style>
    <style name="SearchPlaceholderStyle" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ypRegular19</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/topMargin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>