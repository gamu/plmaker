<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="ru.gamu.playlistmaker.presentation.fragments.MediaLibraryFragment"
        android:label="fragment_media_l_ibrary"
        tools:layout="@layout/fragment_media_library" >
        <action
            android:id="@+id/action_mediaLIbraryFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.gamu.playlistmaker.presentation.fragments.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="ru.gamu.playlistmaker.presentation.fragments.PlayerFragment"
        android:label="PlayerFragment"
        tools:layout="@layout/fragment_player" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.gamu.playlistmaker.presentation.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
</navigation>