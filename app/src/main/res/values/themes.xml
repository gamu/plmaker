<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fillColor">@color/ypBlack</item>
        <item name="svgColor">@color/ypBlack</item>
        <item name="searchIconColor">@color/labelGray</item>
        <item name="tabBackground">@color/ypWhite</item>
        <item name="tabIndicatorColor">@color/ypBlack</item>
        <item name="tabSelectedTextColor">@color/ypBlack</item>
        <item name="tabTextColor">@color/ypBlack</item>
    </style>
    <style name="MainBackground">
        <item name="android:background">@color/ypWhite</item>
    </style>
    <style name="SearchBoxStyle">
        <item name="android:textColor">@color/ypBlack</item>
        <item name="android:textColorHint">@color/labelGray</item>
    </style>
    <style name="ButtonOnSearchView">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/size8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/ypBlack</item>
    </style>
    <style name="InformationPropertyStyle">
        <item name="android:textColor">@color/ypGray</item>
    </style>
    <style name="ValuePropertyStyle">
        <item name="android:textColor">@color/ypBlack</item>
    </style>
    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
</resources>