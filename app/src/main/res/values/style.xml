<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_margin">@dimen/marginBig</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:layout_marginTop">@dimen/indentBase</item>
        <item name="android:textColor">@color/ypBlack</item>
        <item name="backgroundTint">@color/ypWhite</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/ypBlack</item>
    </style>
    <style name="TextViewHeadStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ypMedium22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/marginBig</item>
    </style>
    <style name="SettingsRowStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingsRowSize</item>
        <item name="android:layout_marginTop">@dimen/indentBase</item>
        <item name="android:paddingStart">@dimen/marginBig</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">@color/ypBlack</item>
    </style>
    <style name="SettingsTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/ypRegular16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsImageViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="LayoutHeaderFrameStyle">
        <item name="android:layout_marginTop">@dimen/indentBase</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/marginBig</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="SearchPlaceholderStyle" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ypRegular19</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/topMargin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ImageCoverStyle">
        <item name="android:padding">@dimen/size12</item>
        <item name="android:layout_width">@dimen/emptySize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/placeholder_big</item>
    </style>
    <style name="TrackNameStyle">
        <item name="android:textSize">@dimen/ypMedium22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">@dimen/size24</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="ArtistNameStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/ypMedium14</item>
        <item name="android:fontFamily" >@font/ys_display_medium</item>
    </style>
    <style name="TabStyle">
        <item name="android:textSize">@dimen/ypMedium14</item>
        <item name="android:fontFamily" >@font/ys_display_medium</item>
    </style>
</resources>