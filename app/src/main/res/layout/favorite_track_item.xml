<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="trackItem"
            type="ru.gamu.playlistmaker.domain.models.Track" />

        <variable
            name="vm"
            type="ru.gamu.playlistmaker.presentation.viewmodel.medialibrary.FavoritesViewModel" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size13"
        android:paddingEnd="@dimen/size18"
        android:paddingTop="@dimen/size8"
        android:paddingBottom="@dimen/size8"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="@dimen/size45"
            android:layout_height="@dimen/size45"
            app:imageUrl="@{ trackItem.artworkUrl }"
            android:importantForAccessibility="no"
            app:roundedCornerRadius="@{8f}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indentBase"
            android:orientation="vertical"
            android:paddingStart="@dimen/indentBase"
            android:layout_weight="3"
            tools:ignore="InefficientWeight,RtlSymmetry">

            <TextView
                android:id="@+id/tbTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:fontFamily="@font/ys_display_regular"
                android:text="@{ trackItem.trackName }"
                tools:text="Тут очень длинное название трека которое не должно влезать на экран"
                android:textSize="@dimen/trackTitleSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:id="@+id/tbInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:maxWidth="@dimen/maxArtistWidth"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="@{ trackItem.trackName }"
                    tools:text="Исполнитель с очень длинный"
                    android:textSize="@dimen/trackInfoSize"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:src="@drawable/point"
                    tools:ignore="ContentDescription" />
                <TextView android:id="@+id/tbTiming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:text="@{ trackItem.formatedTrackTime }"
                    tools:text="4:53"
                    android:textSize="@dimen/trackInfoSize"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:src="@drawable/light_mode"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:importantForAccessibility="no" />
    </LinearLayout>
</layout>
