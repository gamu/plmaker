<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/indentBase"
    android:background="@color/ypWhite"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/indentBase"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrowleft"
            android:paddingEnd="@dimen/indentBase"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ypMedium26"
            android:text="@string/appLabel"
            android:textColor="@color/ypBlack"
            android:paddingStart="@dimen/indentBase"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="@dimen/settingsRowSize"
        android:textSize="@dimen/ypRegular16"
        android:textColor="@color/ypBlack"
        android:text="@string/themeLabel"
        android:layout_marginTop="@dimen/indentBase"
        tools:ignore="UseSwitchCompatOrMaterialXml" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settingsRowSize"
        android:layout_marginTop="@dimen/indentBase"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/ypRegular16"
            android:textColor="@color/ypBlack"
            android:text="@string/shareLabel"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_gravity="center_vertical"
            android:src="@drawable/share"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settingsRowSize"
        android:layout_marginTop="@dimen/indentBase"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/ypRegular16"
            android:textColor="@color/ypBlack"
            android:text="@string/supportLabel"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_gravity="center_vertical"
            android:src="@drawable/support"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settingsRowSize"
        android:layout_marginTop="@dimen/indentBase"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/ypRegular16"
            android:textColor="@color/ypBlack"
            android:text="@string/agreementLabel"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_gravity="center_vertical"
            android:src="@drawable/agreement"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>