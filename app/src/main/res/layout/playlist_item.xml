<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="ru.gamu.playlistmaker.domain.models.Playlist" />

        <variable
            name="vm"
            type="ru.gamu.playlistmaker.presentation.viewmodel.playlist.PlaylistViewModel" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size13"
        android:paddingEnd="@dimen/size18"
        android:paddingTop="@dimen/size8"
        android:paddingBottom="@dimen/size8"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size45"
            android:layout_height="@dimen/size45"
            app:cardCornerRadius="@dimen/size4"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="@dimen/size8"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size12">
            <ImageView
                android:id="@+id/imgThumb"
                android:layout_width="@dimen/size45"
                android:layout_height="@dimen/size45"
                android:scaleType="centerCrop"
                app:imageUrl="@{ item.cover }"
                android:background="@drawable/edit_with_rounded_corner"
                android:importantForAccessibility="no" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indentBase"
            android:orientation="vertical"
            android:paddingStart="@dimen/indentBase"
            android:layout_weight="3"
            tools:ignore="InefficientWeight,RtlSymmetry">

            <TextView
                style="@style/ValuePropertyStyle"
                android:id="@+id/tbTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:fontFamily="@font/ys_display_medium"
                android:text="@{ item.title }"
                tools:text="Тут очень длинное название трека которое не должно влезать на экран"
                android:textSize="@dimen/trackTitleSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:id="@+id/tbInformation"
                    style="@style/ValuePropertyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:maxWidth="@dimen/maxArtistWidth"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="@{ item.tracks.size() + ` ` + item.getTrackDeclension() }"
                    tools:text="Исполнитель с очень длинный"
                    android:textSize="@dimen/trackInfoSize"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:src="@drawable/light_mode"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:importantForAccessibility="no" />
    </LinearLayout>
</layout>
