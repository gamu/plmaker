<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size61"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/imgThumb"
        android:layout_width="@dimen/size45"
        android:layout_height="@dimen/size45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indentBase"
        android:orientation="vertical"
        android:paddingStart="@dimen/indentBase"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tbTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/trackTitleSize" />

        <TextView
            android:id="@+id/tbInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/trackInfoSize"/>

    </LinearLayout>

    <ImageView
        android:src="@drawable/light_mode"
        android:layout_height="match_parent"
        android:layout_width="@dimen/iconSize"
        android:importantForAccessibility="no" />
    
</LinearLayout>