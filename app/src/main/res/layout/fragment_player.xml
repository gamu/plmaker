<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="ru.gamu.playlistmaker.presentation.viewmodel.player.PlayerViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:windowSoftInputMode="adjustNothing">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Base.Theme.PlaylistMaker">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/size24" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/controls_middle_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.69" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/size24" />

                <ImageView
                    android:id="@+id/btnBackToSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:scaleType="center"
                    android:layout_gravity="center_vertical"
                    android:onClick="backButtonClick"
                    android:src="@drawable/arrowleft"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <ImageView android:id="@+id/imgCover"
                    style="@style/ImageCoverStyle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintTop_toBottomOf="@id/btnBackToSearch"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{ vm.playerArtworkUrl }"
                    tools:ignore="ContentDescription,RtlSymmetry"
                    app:roundedCornerRadius="@{8f}" />

                <TextView android:id="@+id/txtTrackName"
                    style="@style/TrackNameStyle"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text="@{ vm.trackName }"
                    android:marqueeRepeatLimit="marquee_forever"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintTop_toBottomOf="@id/imgCover"
                    tools:text="Yesterday (Remastered 2009)" />

                <TextView android:id="@+id/txtArtist"
                    style="@style/ArtistNameStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size12"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    app:layout_constraintTop_toBottomOf="@id/txtTrackName"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    android:text="@{ vm.artistName }"
                    tools:text="The Beatles, Rammstein, Thirty seconds to mars, Аллу пугачева "/>

                <!-- Contols -->

                <ImageButton
                    android:id="@+id/btnPlayList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_to_playlist"
                    android:background="@drawable/playlist_shape"
                    app:flow_horizontalBias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintEnd_toStartOf="@id/btnPause"
                    app:layout_constraintTop_toTopOf="@+id/btnPause"
                    app:layout_constraintBottom_toBottomOf="@id/btnPause"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <ImageButton
                    android:id="@+id/btnPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/play"
                    android:layout_marginTop="@dimen/size30"
                    app:flow_horizontalBias="0.3"
                    app:layout_constraintStart_toEndOf="@id/btnPlayList"
                    app:layout_constraintEnd_toStartOf="@+id/btnFavorite"
                    app:layout_constraintTop_toBottomOf="@id/txtArtist"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/playlist_shape"
                    app:flow_horizontalBias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/btnPause"
                    app:layout_constraintTop_toTopOf="@+id/btnPause"
                    app:layout_constraintBottom_toBottomOf="@id/btnPause"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <TextView android:id="@+id/lblTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{ vm.timeLabel }"
                    android:textSize="@dimen/ypMedium14"
                    android:fontFamily="@font/ys_display_medium"
                    android:padding="@dimen/size4"
                    android:layout_marginTop="@dimen/size8"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/btnPause"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/trackListRecycler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/left_guideline"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/lblTiming" />

            </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/overlay" />
    <LinearLayout
            style="@style/BottomSheetStyle"
            android:id="@+id/playlist_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_bg"
            android:visibility="gone"
            app:behavior_hideable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            tools:visibility="gone"
            android:orientation="vertical">

            <View
                style="@style/BottomSheetInvertStyle"
                android:layout_width="50dp"
                android:layout_height="@dimen/size4"
                android:layout_marginTop="@dimen/size8"
                android:background="@drawable/rounded_corner_bg"
                android:layout_gravity="center_horizontal" />

            <TextView
                style="@style/NewPlaylistLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size12"
                android:fontFamily="@font/ys_display_bold"
                android:gravity="center"
                android:paddingVertical="@dimen/size16"
                android:text="@string/toPlaylist"
                android:textSize="@dimen/font19" />
            <Button
                android:id="@+id/btn_new_playlist"
                style="@style/ButtonOnSearchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size16"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/newPlaylist"
                android:textFontWeight="500"
                android:textSize="@dimen/font14"
                app:cornerRadius="@dimen/cornerRadius"
                android:layout_gravity="center_horizontal"
                />

            <ScrollView
                android:id="@+id/scroll_view_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_new_playlist"
                tools:visibility="gone"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/play_list_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="180dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </ScrollView>

            <LinearLayout
                android:id="@+id/no_playlists"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="@dimen/size120"
                    android:layout_height="@dimen/size120"
                    android:layout_marginTop="102dp">
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>