<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.PlaylistMaker">
    <LinearLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/size24"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/emptydataset"
            android:scaleType="center"
            android:layout_gravity="bottom"
            android:contentDescription="@string/SearchDatasetEmpty" />
        <TextView
            style="@style/SearchPlaceholderStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size19"
            android:text="@string/MedialLibraryIsEmpty" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>